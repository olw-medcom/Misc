<?xml version="1.0" encoding="UTF-8"?>
<testcase 
    id="sbdh_schema_validation" 
    xmlns="http://www.gitb.com/tdl/v1/" 
    xmlns:gitb="http://www.gitb.com/core/v1/" 
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
    xsi:schemaLocation="http://www.gitb.com/tdl/v1/ ../../testbedSchemas/gitb_tdl.xsd">    

    <metadata>
        <gitb:name>Basic Schema Validation</gitb:name>
        <gitb:version>1.0</gitb:version>
        <gitb:description>The most basic test: Ensuring that the data conforms to the schema</gitb:description>
    </metadata>

    <imports>
        <artifact type="schema" encoding="UTF-8" name="SBDHSchema">resources/StandardBusinessDocumentHeader.xsd</artifact>
    </imports>

    <actors>
        <gitb:actor id="EHMICorrespondent" name="EHMI Correspondent" role="SUT"/>
    </actors>

    <steps>
        <interact id="SBDHUserData" desc="Upload any type of SBDH message">
            <request desc="SBDH Message to validate" name="sbdhMsg" inputType="UPLOAD"></request>
        </interact>
        <verify handler="XmlValidator" desc="Validate SBDH message">
            <input name="xml">$SBDHUserData{sbdhMsg}</input>
            <input name="xsd">$SBDHSchema</input>
        </verify>
    </steps>

    <output>
        <success>
            <default>"Basic schema validation succeeded"</default>
        </success>
        <failure>
            <default>"Basic schema validation failed"</default>
        </failure>
    </output>

</testcase>